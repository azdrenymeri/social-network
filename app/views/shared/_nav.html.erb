<% if user_signed_in? %>
  <% if current_user.photo %>
    <img class="main-img" alt="image" src = <%= current_user.photo %> />
  <% end %>
   Wellcome <strong> <%= current_user.email  %> </strong>
   | <%= link_to "Main", root_path %>
   | <%= link_to "Create Post", new_post_path %> 
   | <%= link_to "Profile", user_path(current_user.id)%>
   | <%= link_to "Edit profile", edit_user_path(current_user)%> 
   | <%= link_to "Sign out", destroy_user_session_path,method:"DELETE" %>
   | <%= link_to "People you might know", users_path ,method:"GET"%>
   
   <% if User.pending_friend_requests(current_user).count > 0 %>
    | You have <%= link_to User.pending_friend_requests(current_user).count,friendships_path %> friend requests
    <% else %>
    | <%= link_to "Friends", friendships_path %>
   <% end %>
<% else %>
    <%= link_to "Login in", new_user_session_path %>
  | <%= link_to "Login with Facebook", user_facebook_omniauth_authorize_path %> 
  | <%= link_to "Sign up",new_user_registration_path %>
  
<% end %>