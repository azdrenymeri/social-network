<%= form_for @post ,controller:"posts",action:"create", method:"POST" do |f| %>
    <%= f.label :title%>
    <%= f.text_field :title,placeholder: "Your post title" %>
    <br/><br/>
    <%= f.label :content%>
    <%= f.text_area :content ,placeholder: "Content"%>
    <br/></br>
<%= f.submit "Create Post" %>
<% end %>